model User {
    id         Int          @id @default(autoincrement())
    email      String    @unique
    password   String
    phoneNumber String?
    address String?
    birthDate  DateTime?
    expirationDateDrivingLicense DateTime?     
    createdAt  DateTime?     @default(now())
    userLogins UserLogin[]
    roles      Role[] 

   
}

model UserLogin {
    id     Int  @id
    userId Int
    user   User @relation(fields: [userId], references: [id])
}
model Role {
    id    Int    @id
    users User[]
}