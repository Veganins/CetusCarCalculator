model User {
    id         Int          @id @default(autoincrement())
    email      String    @unique
    password   String
    phoneNumber String?
    address String?
    birthDate  DateTime
    expirationDateDrivingLicense DateTime     
    createdAt  DateTime?     @default(now())
    userLogins UserLogin[]
    roles      String? @default("user")

   
}

model UserLogin {
    id     Int  @id
    userId Int
    user   User @relation(fields: [userId], references: [id])
}
